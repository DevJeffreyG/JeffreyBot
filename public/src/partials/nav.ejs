<%- include("./styles.ejs") %>

<nav>
    <div class="left" id="logo">
        <img src="https://github.com/DevJeffreyG/JeffreyBot/blob/v2.X.X/src/resources/imgs/icon.png?raw=true"
            alt="JB Logo" class="logo">
        <p>Jeffrey Bot</p>
    </div>
    <div class="right">
        <div id="account">
            <% if(session.cookies.user) {%>
                <script>
                    const avatarUrl = "https://cdn.discordapp.com/avatars/<%-session.cookies.user.id%>/<%-session.cookies.user.avatar%>.png";
                    const username = "<%-session.cookies.user.username%>";
                </script>

                <div class="session-manager">
                    <img id="session-user" src="" alt="" />
                    <i id="arrow">.</i>
                </div>
                <script>
                    const img = document.querySelector("img#session-user");
                    img.src = avatarUrl;
                    img.setAttribute("src", avatarUrl);
                    img.setAttribute("alt", username);
                </script>
                <%} else {%>
                    <div class="button" id="login-btt">Entra con Discord</div>
                    <% } %>
        </div>
    </div>
</nav>
<% if(session.cookies.user) {%>
<div id="manager" style="margin-top: var(--navh);">
